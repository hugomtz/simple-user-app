.navbar
  .navbar-left
    %ul.nav-list
      %li
        =link_to "Home", root_path
      - if current_user
        %li
          =link_to "Log Out", log_out_path
  .navbar-right
    .nav
      %ul.nav-list

        - if current_user
          %li.user
            = link_to user_path(current_user), :class => 'avatar' do
              = image_tag "user/default.png"
              = truncate(current_user.name, length:10)
        - else
          %li.credButtons
            =link_to "Register", new_user_path
            =link_to "Login", new_session_path