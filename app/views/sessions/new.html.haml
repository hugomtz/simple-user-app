= render_simple_flashes
= form_tag sessions_path, class: "basic-form" do |f|
  %h3
    Log In
  = label_tag :username, "Username/Email", :class => 'form-label'
  = text_field_tag :username
  = label_tag :password, "Password", :class => 'form-label'
  = password_field_tag :password
  .actions
    = submit_tag "Submit", :class => 'button'

